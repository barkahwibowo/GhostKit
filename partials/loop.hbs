{{! post loop}}
{{#foreach posts}}

			<hr class="uk-grid-divider">

			<div class="uk-grid" data-uk-grid-margin="">
				
				<div class="uk-width-medium-1-3">
					<img width="300" height="100" src="{{image}}" alt="">
				</div>

				<div class="uk-width-medium-2-3">
					<article class="uk-article {{post_class}}">
						<h1 class="uk-article-title"><a href="{{url}}">{{title}}</a></h1>
						<p class="uk-article-meta">
							Written by {{#author}}<a href="{{url}}">{{name}}</a>{{/author}} on {{date format="DD MMMM YYYY"}}
							<br>{{tags separator=" | " prefix="Posted in: "}}
						</p>
						<p>{{excerpt words="50"}}</p>
					</article>

					<p><a class="uk-button uk-button-primary" href="{{url}}" data-uk-tooltip title="Baca Selengkapnya">Selanjutnya</a> <a class="uk-button uk-button-primary" href="{{url}}#disqus_thread" data-uk-tooltip title="Lihat Komentar"></a></p>
				</div>

			</div>

{{/foreach}}