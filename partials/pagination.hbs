{{! Pagination }}
			<div class="uk-panel uk-panel uk-container-center uk-text-center uk-hidden-small">
            	<ul class="uk-pagination">
	            	{{#if prev}}
	            		<li><a href="{{page_url prev}}#latestpost"><i class="uk-icon-angle-left"></i> Lebih Baru</a></li>
	            	{{/if}}
	            		<li class="uk-active"><span>Halaman {{page}} dari {{pages}}</span></li>
	            	{{#if next}}
	            		<li><a href="{{page_url next}}#latestpost"><i class="uk-icon-angle-right"></i> Lebih Lama </a></li>
	            	{{/if}}
            	</ul>
            </div>
            <div class="uk-panel uk-panel uk-container-center uk-text-center uk-hidden-large">
            	<ul class="uk-pagination">
	            	{{#if prev}}
	            		<li><a href="{{page_url prev}}#latestpost"><i class="uk-icon-angle-left"></i> Baru</a></li>
	            	{{/if}}
	            		<li class="uk-active"><span>{{page}} dari {{pages}}</span></li>
	            	{{#if next}}
	            		<li><a href="{{page_url next}}#latestpost"><i class="uk-icon-angle-right"></i> Lama </a></li>
	            	{{/if}}
            	</ul>
            </div>